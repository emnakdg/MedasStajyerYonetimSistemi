@{
    ViewData["Title"] = "Erişim Reddedildi";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-warning">
            <div class="card-body text-center">
                <i class="fas fa-ban fa-4x text-warning mb-4"></i>
                <h3 class="card-title text-warning">Erişim Reddedildi</h3>
                <p class="card-text">Bu sayfaya erişim yetkiniz bulunmamaktadır.</p>
