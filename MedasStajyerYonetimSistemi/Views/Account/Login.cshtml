@using MedasStajyerYonetimSistemi.Controllers
@model LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-header text-center bg-primary text-white">
                <h3><i class="fas fa-building me-2"></i>MEDAŞ</h3>
                <p class="mb-0">Stajyer Yönetim Sistemi</p>
            </div>
            <div class="card-body p-4">
                <h4 class="text-center mb-4">Giriş Yap</h4>

                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="@ViewData["ReturnUrl"]" />

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope me-1"></i>E-posta
                        </label>
                        <input asp-for="Email" class="form-control" placeholder="ornek@medas.com.tr" autofocus />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">
                            <i class="fas fa-lock me-1"></i>Şifre
                        </label>
                        <input asp-for="Password" class="form-control" placeholder="Şifrenizi giriniz" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">
                            Beni hatırla
                        </label>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-1"></i>Giriş Yap
                        </button>
                    </div>
                </form>

                <div class="text-center">
                    <small class="text-muted">
                        Hesabınız yok mu?
                        <a asp-action="Register" class="text-decoration-none">Kayıt olun</a>
                    </small>
                </div>
            </div>
            <div class="card-footer text-center text-muted">
                <small>&copy; 2025 MEDAŞ - Tüm hakları saklıdır</small>
            </div>
        </div>
    </div>
</div>

