@model IEnumerable<MedasStajyerYonetimSistemi.Models.Intern>

@{
    ViewData["Title"] = "Stajyer Listesi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">Stajyer Listesi</h3>
                    <div>
                       @*  @if (User.IsInRole("Admin") || User.IsInRole("HR"))
                        {
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Yeni Kayıt
                            </a>
                        } *@
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Yeni Kayıt
                        </a>
                        @* @if (User.IsInRole("Admin") || User.IsInRole("HR") || User.IsInRole("Supervisor"))
                        {
                            <a asp-action="ExportToExcel" class="btn btn-success">
                                <i class="fas fa-download"></i> Dışa Aktar
                            </a>
                        } *@
                        <a asp-action="ExportToExcel" class="btn btn-success">
                            <i class="fas fa-download"></i> Dışa Aktar
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Arama ve Filtreler -->
                    <form asp-action="Index" method="get" class="mb-4">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="input-group">
                                    <input type="text" name="searchTerm" value="@ViewBag.CurrentSearch"
                                           class="form-control" placeholder="Ara...">
                                    <button type="submit" class="btn btn-outline-secondary">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <select name="sortBy" class="form-select" onchange="this.form.submit()">
                                    <option value="FullName" selected="@(ViewBag.CurrentSort == "FullName")">Adı Soyadı</option>
                                    <option value="Company" selected="@(ViewBag.CurrentSort == "Company")">Şirket</option>
                                    <option value="Department" selected="@(ViewBag.CurrentSort == "Department")">Departman</option>
                                    <option value="School" selected="@(ViewBag.CurrentSort == "School")">Okul</option>
                                    <option value="InternshipType" selected="@(ViewBag.CurrentSort == "InternshipType")">Staj Türü</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-redo"></i> Temizle
                                </a>
                            </div>
                            <div class="col-md-3 text-end">
                                <small class="text-muted">Toplam: @ViewBag.TotalCount stajyer</small>
                            </div>
                        </div>
                    </form>

                    <!-- Stajyer Tablosu -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Adı-Soyadı</th>
                                    <th>Şirketi</th>
                                    <th>Okulu</th>
                                    <th>Okul Bölümü</th>
                                    <th>Sorumlu Kişi</th>
                                    <th>Departman/İşletme</th>
                                    <th>Staj Günleri</th>
                                    <th>Detay</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@Html.DisplayFor(modelItem => item.FullName)</strong>
                                            @if (item.IsFromCloudoffix)
                                            {
                                                <span class="badge bg-info ms-1">Cloudoffix</span>
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.Company)</td>
                                        <td>@Html.DisplayFor(modelItem => item.School)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Major)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ResponsiblePerson)</td>
                                        <td>
                                            <small>@Html.DisplayFor(modelItem => item.Department)</small>
                                        </td>
                                        <td>
                                            <small>@Html.DisplayFor(modelItem => item.WorkDays)</small>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Id"
                                                   class="btn btn-sm btn-outline-primary" title="Detay">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                               @*  @if (User.IsInRole("Admin") || User.IsInRole("HR"))
                                                {
                                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                                       class="btn btn-sm btn-outline-warning" title="Düzenle">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                                       class="btn btn-sm btn-outline-danger" title="Sil">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                } *@
                                                <a asp-action="Edit" asp-route-id="@item.Id"
                                                   class="btn btn-sm btn-outline-warning" title="Düzenle">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id"
                                                   class="btn btn-sm btn-outline-danger" title="Sil">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Sayfalama -->
                    @if (ViewBag.TotalPages > 1)
                    {
                        <nav aria-label="Sayfalama">
                            <ul class="pagination justify-content-center">
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-page="@i"
                                           asp-route-sortBy="@ViewBag.CurrentSort"
                                           asp-route-searchTerm="@ViewBag.CurrentSearch">@i</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>