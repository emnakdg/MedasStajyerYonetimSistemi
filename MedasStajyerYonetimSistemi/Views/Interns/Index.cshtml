@model IEnumerable<MedasStajyerYonetimSistemi.Models.Intern>

@{
    ViewData["Title"] = "Stajyer Listesi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">Stajyer Listesi</h3>
                    <div class="col-md-6 text-end">
                        @* Sadece HR ve Admin yeni kayıt oluşturabilir *@
                        @if (User.IsInRole("Admin") || User.IsInRole("HR"))
                        {
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Yeni Kayıt
                            </a>
                        }

                        @* Sadece PersonelIsleri export yapabilir *@
                        @if (User.IsInRole("PersonelIsleri"))
                        {
                            <a asp-action="ExportToExcel" class="btn btn-success me-2">
                                <i class="fas fa-file-excel"></i> Excel'e Aktar
                            </a>
                        }
                    </div>
                </div>

                <div class="card-body">
                    <!-- Arama ve Filtreler -->
                    <form asp-action="Index" method="get" class="mb-4">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="input-group">
                                    <input type="text" name="searchTerm" value="@ViewBag.CurrentSearch"
                                           class="form-control" placeholder="Ara...">
                                    <button type="submit" class="btn btn-outline-secondary">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <select name="sortBy" class="form-select" onchange="this.form.submit()">
                                    <option value="FullName" selected="@(ViewBag.CurrentSort == "FullName")">Adı Soyadı</option>
                                    <option value="Company" selected="@(ViewBag.CurrentSort == "Company")">Şirket</option>
                                    <option value="Department" selected="@(ViewBag.CurrentSort == "Department")">Departman</option>
                                    <option value="School" selected="@(ViewBag.CurrentSort == "School")">Okul</option>
                                    <option value="InternshipType" selected="@(ViewBag.CurrentSort == "InternshipType")">Staj Türü</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-redo"></i> Temizle
                                </a>
                            </div>
                            <div class="col-md-3 text-end">
                                <small class="text-muted">Toplam: @ViewBag.TotalCount stajyer</small>
                            </div>
                        </div>
                    </form>

                    <!-- Stajyer Tablosu -->
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-primary">
                                    <tr>
                                        <th>Adı-Soyadı</th>
                                        <th>Şirketi</th>
                                        <th>Okulu</th>
                                        <th>Okul Bölümü</th>
                                        <th>Sorumlu Kişi</th>
                                        <th>Departman/İşletme</th>
                                        <th>Staj Günleri</th>
                                        <th>Detay</th>
                                        @* Sadece HR ve Admin için dzüenleme silme butonları *@
                                        @if (User.IsInRole("Admin") || User.IsInRole("HR"))
                                        {
                                            <th>İşlemler</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.FullName</strong>
                                                @if (item.IsFromCloudoffix)
                                                {
                                                    <span class="badge bg-info ms-1" title="Cloudoffix'ten alınan kayıt">
                                                        <i class="fas fa-cloud"></i>
                                                    </span>
                                                }
                                            </td>
                                            <td>@item.Company</td>
                                            <td>@item.School</td>
                                            <td>@item.Major</td>
                                            <td>@item.ResponsiblePerson</td>
                                            <td>@item.Department</td>
                                            <td>
                                                <small class="text-muted">@item.WorkDays</small>
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i>Detay
                                                </a>
                                            </td>
                                            @* Sadece HR ve Admin için düzenleme ve silme *@
                                            @if (User.IsInRole("Admin") || User.IsInRole("HR"))
                                            {
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Düzenle">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        @if (User.IsInRole("Admin"))
                                                        {
                                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Sil">
                                                                <i class="fas fa-trash"></i>
                                                            </a>
                                                        }
                                                    </div>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Sayfalama -->
                        @if (ViewBag.TotalPages > 1)
                        {
                            <nav class="mt-3">
                                <ul class="pagination justify-content-center">
                                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="?page=@i&sortBy=@ViewBag.CurrentSort&searchTerm=@ViewBag.CurrentSearch">@i</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Kayıt bulunamadı</h5>
                            @if (User.IsInRole("Intern"))
                            {
                                <p class="text-muted">Stajyer kaydınız sisteme henüz eklenmemiş olabilir.</p>
                            }
                            else if (User.IsInRole("Admin") || User.IsInRole("HR"))
                            {
                                <p class="text-muted">Yeni stajyer kaydı oluşturmak için yukarıdaki "Yeni Kayıt" butonunu kullanın.</p>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>