@model MedasStajyerYonetimSistemi.Models.Intern

@{
    ViewData["Title"] = "Stajyer Kaydı - Detay";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">Stajyer Kaydı - Detay</h3>
                    <div>
                        @if (User.IsInRole("Admin") || User.IsInRole("HR"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                        }
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Geri Dön
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Stajyer Bilgileri -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="border-bottom pb-2">Stajyer Bilgileri</h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Adı-Soyadı</label>
                            <div class="form-control-plaintext border p-2 bg-light">
                                @Html.DisplayFor(model => model.FullName)
                                @if (Model.IsFromCloudoffix)
                                {
                                    <span class="badge bg-info ms-2">Cloudoffix</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">İkamet (İl/İlçe)</label>
                            <div class="form-control-plaintext border p-2 bg-light">
                                @Html.DisplayFor(model => model.Address)
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Cep Telefonu</label>
                            <div class="form-control-plaintext border p-2 bg-light">
                                @Html.DisplayFor(model => model.PhoneNumber)
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Email</label>
                            <div class="form-control-plaintext border p-2 bg-light">
                                @Html.DisplayFor(model => model.Email)
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Şirket</label>
                            <div class="form-control-plaintext border p-2 bg-light">
                                @Html.DisplayFor(model => model.Company)
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Departman/İşletme</label>
                            <div class="form-control-plaintext border p-2 bg-light">
                                @Html.DisplayFor(model => model.Department)
                            </div>
                        </div>
                    </div>

                    <!-- İzin ve Puantaj Özeti -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="border-bottom pb-2">İzin ve Puantaj Özeti</h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6>İzin Talepleri</h6>
                                    <p class="mb-0">Toplam: @Model.LeaveRequests.Count()</p>
                                    <p class="mb-0">Beklemede: @Model.LeaveRequests.Count(l => l.Status == ApprovalStatus.Pending)</p>
                                    <p class="mb-0">Onaylandı: @Model.LeaveRequests.Count(l => l.Status == ApprovalStatus.Approved)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6>Puantaj Kayıtları</h6>
                                    <p class="mb-0">Toplam: @Model.Timesheets.Count()</p>
                                    <p class="mb-0">Beklemede: @Model.Timesheets.Count(t => t.Status == ApprovalStatus.Pending)</p>
                                    <p class="mb-0">Onaylandı: @Model.Timesheets.Count(t => t.Status == ApprovalStatus.Approved)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Hızlı İşlemler -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <h5 class="border-bottom pb-2">Hızlı İşlemler</h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <a asp-controller="LeaveRequests" asp-action="Create" asp-route-internId="@Model.Id"
                               class="btn btn-success me-2">
                                <i class="fas fa-calendar-plus"></i> İzin Talebi Oluştur
                            </a>
                            <a asp-controller="Timesheets" asp-action="Create" asp-route-internId="@Model.Id"
                               class="btn btn-info me-2">
                                <i class="fas fa-clock"></i> Puantaj Oluştur
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>