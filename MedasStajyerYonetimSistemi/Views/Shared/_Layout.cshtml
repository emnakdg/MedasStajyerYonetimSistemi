<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MEDAŞ Stajyer Yönetim Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedasStajyerYonetimSistemi.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        .navbar-brand {
            font-weight: bold;
            color: #1b6ec2 !important;
        }

        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }

        .nav-link {
            font-weight: 500;
        }

            .nav-link:hover {
                color: #1b6ec2 !important;
            }

            .nav-link.active {
                color: #1b6ec2 !important;
                font-weight: 600;
            }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom mb-3">
            <div class="container-fluid">
                <!-- MEDAŞ Logo/Brand -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-building me-2 text-primary"></i>
                    <span>MEDAŞ Stajyer Sistemi</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
                                   asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home me-1"></i> Anasayfa
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Interns" ? "active" : "")"
                                   asp-controller="Interns" asp-action="Index">
                                    <i class="fas fa-users me-1"></i>
                                    @if (User.IsInRole("Intern"))
                                    {
                                        <span>Bilgilerim</span>
                                    }
                                    else
                                    {
                                        <span>Stajyer Liste</span>
                                    }
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "LeaveRequests" ? "active" : "")"
                                   asp-controller="LeaveRequests" asp-action="Index">
                                    <i class="fas fa-calendar-times me-1"></i>
                                    @if (User.IsInRole("Intern"))
                                    {
                                        <span>İzin Taleplerim</span>
                                    }
                                    else
                                    {
                                        <span>İzin Yönetimi</span>
                                    }
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Timesheets" ? "active" : "")"
                                   asp-controller="Timesheets" asp-action="Index">
                                    <i class="fas fa-clock me-1"></i>
                                    @if (User.IsInRole("Intern"))
                                    {
                                        <span>Puantajlarım</span>
                                    }
                                    else
                                    {
                                        <span>Puantaj Yönetimi</span>
                                    }
                                </a>
                            </li>
                        </ul>

                        <!-- Kullanıcı Menüsü -->
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-2"></i>
                                    <span>@User.Identity.Name</span>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span class="badge bg-danger ms-1">Admin</span>
                                    }
                                    else if (User.IsInRole("HR"))
                                    {
                                        <span class="badge bg-primary ms-1">HR</span>
                                    }
                                    else if (User.IsInRole("Supervisor"))
                                    {
                                        <span class="badge bg-success ms-1">Supervisor</span>
                                    }
                                    else if (User.IsInRole("Intern"))
                                    {
                                        <span class="badge bg-info ms-1">Stajyer</span>
                                    }
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><h6 class="dropdown-header">Hoş geldiniz</h6></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }

                    
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i> Giriş Yap
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container-fluid">
            <div class="row py-3">
                <div class="col-md-6">
                    &copy; 2025 - MEDAŞ Stajyer Yönetim Sistemi
                </div>
                <div class="col-md-6 text-end">
                    <a asp-controller="Home" asp-action="Privacy" class="text-muted text-decoration-none">
                        <i class="fas fa-shield-alt me-1"></i>Gizlilik
                    </a>
                    <span class="mx-2">|</span>
                    <a href="#" class="text-muted text-decoration-none">
                        <i class="fas fa-question-circle me-1"></i>Yardım
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>