@model IEnumerable<MedasStajyerYonetimSistemi.Models.Timesheet>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Puantaj Yönetimi";
    var currentUser = await UserManager.GetUserAsync(User);
    var userRoles = await UserManager.GetRolesAsync(currentUser);
    // DÜZELTİLDİ: PersonelIsleri'nin onaylama yetkisi kaldırıldı
    bool canApprove = userRoles.Any(r => r == "Admin" || r == "HR" || r == "Supervisor");
    // DÜZELTİLDİ: Sadece PersonelIsleri excel export yapabilir
    bool canExport = userRoles.Contains("PersonelIsleri");
    bool isIntern = userRoles.Contains("Intern");
    // DÜZELTİLDİ: PersonelIsleri'nin puantaj oluşturma yasağı netleştirildi
    var canCreate = !User.IsInRole("PersonelIsleri");
}

@Html.AntiForgeryToken()

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Puantaj Yönetimi</h2>
            <div>
                @if (canExport)
                {
                    <a asp-action="ExportToExcel" class="btn btn-success me-2">
                        <i class="fas fa-file-excel"></i> Excele Aktar
                    </a>
                }
                @if (canCreate)
                {
                    <a asp-action="Create" class="btn btn-primary">Yeni Puantaj</a>
                }
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Filtreler -->
        <div class="card mb-3">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Durum</label>
                        <select name="status" class="form-select">
                            <option value="All" selected="@(ViewBag.CurrentStatus == "All")">Tümü</option>
                            <option value="Pending" selected="@(ViewBag.CurrentStatus == "Pending")">Beklemede</option>
                            <option value="Approved" selected="@(ViewBag.CurrentStatus == "Approved")">Onaylandı</option>
                            <option value="Rejected" selected="@(ViewBag.CurrentStatus == "Rejected")">Reddedildi</option>
                            <option value="Revision" selected="@(ViewBag.CurrentStatus == "Revision")">Revize</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <button type="submit" class="btn btn-primary d-block">
                            <i class="fas fa-filter"></i> Filtrele
                        </button>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <button type="button" class="btn btn-secondary d-block" onclick="clearFilters()">
                            <i class="fas fa-times"></i> Temizle
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- İstatistikler -->
        <div class="row mb-3">
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <h3>@(ViewBag.PendingCount ?? 0)</h3>
                        <span>Beklemede</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h3>@(ViewBag.RevisionCount ?? 0)</h3>
                        <span>Revize</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h3>@(ViewBag.ApprovedCount ?? 0)</h3>
                        <span>Onaylandı</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-secondary text-white">
                    <div class="card-body text-center">
                        <h3>@(ViewBag.TotalCount ?? 0)</h3>
                        <span>Toplam</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tablo -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Stajyer</th>
                                @if (!isIntern)
                                {
                                    <th>Dönem</th>
                                }
                                <th>Çalışma/İzin</th>
                                <th>Eğitim</th>
                                <th>Durum</th>
                                <th>Oluşturma</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div>
                                                <strong>@item.Intern.FullName</strong>
                                                @if (!isIntern)
                                                {
                                                    <br>

                                                    <small class="text-muted">@item.Intern.Department</small>
                                                }
                                            </div>
                                        </td>
                                        @if (!isIntern)
                                        {
                                            <td>
                                                @item.PeriodDate.ToString("MMMM yyyy")
                                                @if (item.IsManualEntry)
                                                {
                                                    <br>

                                                    <span class="badge bg-secondary">Manuel</span>
                                                }
                                            </td>
                                        }
                                        <td>
                                            <span class="badge bg-primary">@item.TotalWorkDays çalışma</span>
                                            @if (item.TotalLeaveDays > 0)
                                            {
                                                <br>

                                                <span class="badge bg-warning">@item.TotalLeaveDays izin</span>
                                            }
                                        </td>
                                        <td>
                                            @item.TotalTrainingHours.ToString("F1") saat
                                        </td>
                                        <td>
                                            @switch (item.Status)
                                            {
                                                case ApprovalStatus.Pending:
                                                    <span class="badge bg-warning">Beklemede</span>
                                                    break;
                                                case ApprovalStatus.SupervisorApproved:
                                                    <span class="badge bg-info">Supervisor Onaylandı</span>
                                                    @if (item.Intern.InternshipType == InternshipType.Talentern)
                                                    {
                                                        <br>

                                                        <small class="text-muted">İK onayı bekleniyor</small>
                                                    }
                                                    break;
                                                case ApprovalStatus.Approved:
                                                    <span class="badge bg-success">Onaylandı</span>
                                                    @if (!string.IsNullOrEmpty(item.ApproverName))
                                                    {
                                                        <br>

                                                        <small class="text-muted">@item.ApproverName</small>
                                                    }
                                                    break;
                                                case ApprovalStatus.Rejected:
                                                    <span class="badge bg-danger">Reddedildi</span>
                                                    @if (!string.IsNullOrEmpty(item.ApproverName))
                                                    {
                                                        <br>

                                                        <small class="text-muted">@item.ApproverName</small>
                                                    }
                                                    break;
                                                case ApprovalStatus.Revision:
                                                    <span class="badge bg-secondary">Revizyon</span>
                                                    @if (!string.IsNullOrEmpty(item.ApproverName))
                                                    {
                                                        <br>

                                                        <small class="text-muted">@item.ApproverName</small>
                                                    }
                                                    break;
                                            }
                                        </td>
                                        <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <!-- Herkes Detay Görebilir -->
                                                <a asp-action="Details" asp-route-id="@item.Id"
                                                   class="btn btn-sm btn-outline-primary" title="Detaylar">
                                                    <i class="fas fa-eye"></i>
                                                </a>

                                                <!-- Stajyer Sadece Beklemedeki/Revize Kendi Puantajlarını Düzenleyebilir -->
                                                @if ((item.Status == ApprovalStatus.Pending || item.Status == ApprovalStatus.Revision) &&
                                                                                        ((isIntern && item.Intern.Email == currentUser.Email) || canApprove))
                                                {
                                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                                       class="btn btn-sm btn-outline-warning" title="Düzenle">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                }

                                                <!-- SADECE YETKİLİLER ONAYLAMA/REDDETME YAPABİLİR -->
                                                @if (canApprove && (item.Status == ApprovalStatus.Pending || item.Status == ApprovalStatus.Revision || item.Status == ApprovalStatus.SupervisorApproved))
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-success"
                                                            onclick="approveTimesheet(@item.Id)" title="Onayla">
                                                        <i class="fas fa-check"></i>
                                                    </button>

                                                    @if (item.Status != ApprovalStatus.SupervisorApproved)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-outline-warning"
                                                                onclick="showRevisionModal(@item.Id)" title="Revizyon İste">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                    }

                                                    <button type="button" class="btn btn-sm btn-outline-danger"
                                                            onclick="showRejectModal(@item.Id)" title="Reddet">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="@(isIntern ? "6" : "7")" class="text-center text-muted py-4">
                                        <i class="fas fa-inbox fa-2x mb-2"></i>
                                        <br>
                                        Henüz puantaj bulunmuyor.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav class="mt-3">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-route-page="@i" asp-route-status="@ViewBag.CurrentStatus">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>

<!-- MODAL'LAR - SADECE YETKİLİLER İÇİN -->
@if (canApprove)
{
    <!-- Reddetme Modal -->
    <div class="modal fade" id="rejectModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Puantajı Reddet</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="rejectForm" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <input type="hidden" id="rejectTimesheetId" name="id" />
                        <div class="mb-3">
                            <label for="rejectNote" class="form-label">Red Sebebi *</label>
                            <textarea class="form-control" id="rejectNote" name="approvalNote" rows="3" required
                                  placeholder="Lütfen reddetme sebebinizi açıklayın..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-danger">Reddet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Revizyon Modal -->
    <div class="modal fade" id="revisionModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Revizyon İste</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="revisionForm" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <input type="hidden" id="revisionTimesheetId" name="id" />
                        <div class="mb-3">
                            <label for="revisionNote" class="form-label">Revizyon Notu *</label>
                            <textarea class="form-control" id="revisionNote" name="approvalNote" rows="3" required
                                  placeholder="Hangi değişikliklerin yapılması gerektiğini belirtiniz..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-warning">Revizyon İste</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        function clearFilters() {
            window.location.href = '@Url.Action("Index", "Timesheets")';
        }

        <!-- SADECE YETKİLİLER İÇİN JAVASCRIPT FONKSİYONLARI -->
        @if (canApprove)
        {
                    <text>
                    function approveTimesheet(id) {
                        if (confirm('Bu puantajı onaylamak istediğinizden emin misiniz?')) {
                            var form = document.createElement('form');
                            form.method = 'POST';
                            form.action = '@Url.Action("Approve", "Timesheets")';

                            var idInput = document.createElement('input');
                            idInput.type = 'hidden';
                            idInput.name = 'id';
                            idInput.value = id;
                            form.appendChild(idInput);

                            // Anti-forgery token'ı doğru şekilde al
                            var token = document.querySelector('input[name="__RequestVerificationToken"]');
                            if (token) {
                                var tokenInput = document.createElement('input');
                                tokenInput.type = 'hidden';
                                tokenInput.name = '__RequestVerificationToken';
                                tokenInput.value = token.value;
                                form.appendChild(tokenInput);
                            }

                            document.body.appendChild(form);
                            form.submit();
                        }
                    }

                    function showRejectModal(id) {
                        document.getElementById('rejectTimesheetId').value = id;
                        document.getElementById('rejectForm').action = '@Url.Action("Reject", "Timesheets")';
                        new bootstrap.Modal(document.getElementById('rejectModal')).show();
                    }

                    function showRevisionModal(id) {
                        document.getElementById('revisionTimesheetId').value = id;
                        document.getElementById('revisionForm').action = '@Url.Action("RequestRevision", "Timesheets")';
                        new bootstrap.Modal(document.getElementById('revisionModal')).show();
                    }
                    </text>
        }
    </script>
}