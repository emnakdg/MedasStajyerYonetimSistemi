@model MedasStajyerYonetimSistemi.Models.Timesheet
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Puantaj Detayı";
    var currentUser = await UserManager.GetUserAsync(User);
    var userRoles = await UserManager.GetRolesAsync(currentUser);
    bool canApprove = userRoles.Any(r => r == "Admin" || r == "HR" || r == "Supervisor" || r == "PersonelIsleri");
    bool isIntern = userRoles.Contains("Intern");

    // YENİ: Detaylı yetki kontrolü
    bool internCanEditDetails = isIntern && Model.Intern.Email == currentUser.Email;

    // Form düzenleme (Edit sayfası) hakları
    bool canEditForm = false;
    if (canApprove)
    {
        canEditForm = true; // Admin/HR/Supervisor her zaman
    }
    else if (internCanEditDetails)
    {
        canEditForm = (Model.Status == ApprovalStatus.Pending || Model.Status == ApprovalStatus.Revision);
    }

    // Detay düzenleme hakları (onaylanmış puantajlarda da olabilir)
    bool canEditDetails = canApprove || internCanEditDetails;
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Puantaj Detayı</h2>
            <div>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri
                </a>

                @if (canEditForm)
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                }
                else if (canEditDetails && Model.Status == ApprovalStatus.Approved)
                {
                    <!-- Onaylanmış puantajlarda sadece detay düzenleme bilgisi -->
                    <span class="btn btn-info" title="Onaylanmış puantajlarda sadece günlük detayları düzenleyebilirsiniz">
                        <i class="fas fa-info-circle"></i> Detay Düzenleme
                    </span>
                }
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show">
                @TempData["InfoMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- YENİ: Durum bilgisi -->
        <div class="alert alert-@(Model.Status == ApprovalStatus.Approved ? "success" :
                                               Model.Status == ApprovalStatus.Pending ? "warning" :
                                               Model.Status == ApprovalStatus.Revision ? "info" : "danger")">
            <strong>Durum:</strong>
            @switch (Model.Status)
            {
                case ApprovalStatus.Pending:
                    <span>Beklemede</span>
                    break;
                case ApprovalStatus.Approved:
                    <span>Onaylandı</span>
                    if (canEditDetails)
                    {
                        <br>
            
                        <small><i class="fas fa-info-circle"></i> Onaylanmış puantajlarda günlük detayları düzenleyebilirsiniz.</small>
                    }
                    break;
                case ApprovalStatus.Revision:
                    <span>Revizyon Gerekiyor</span>
                    if (internCanEditDetails)
                    {
                        <br>
            
                        <small><i class="fas fa-exclamation-triangle"></i> Lütfen gerekli düzeltmeleri yapıp kaydedin.</small>
                    }
                    break;
                case ApprovalStatus.Rejected:
                    <span>Reddedildi</span>
                    break;
            }
        </div>

        <div class="row">
            <!-- Ana Bilgiler -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-calendar-alt"></i> Puantaj Bilgileri</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Stajyer:</label>
                                    <p class="mb-0">@Model.Intern.FullName</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Departman:</label>
                                    <p class="mb-0">@Model.Intern.Department</p>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Dönem:</label>
                                    <p class="mb-0">@Model.PeriodDate.ToString("MMMM yyyy")</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Toplam Eğitim Saati:</label>
                                    <p class="mb-0">@Model.TotalTrainingHours.ToString("F1") saat</p>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Toplam Çalışma Günü:</label>
                                    <p class="mb-0">
                                        <span class="badge bg-primary">@Model.TotalWorkDays gün</span>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Toplam İzin Günü:</label>
                                    <p class="mb-0">
                                        <span class="badge bg-warning">@Model.TotalLeaveDays gün</span>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Manuel Form:</label>
                                    <p class="mb-0">
                                        <span class="badge bg-@(Model.IsManualEntry ? "warning" : "secondary")">
                                            @(Model.IsManualEntry ? "Evet" : "Hayır")
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Oluşturma Tarihi:</label>
                            <p class="mb-0">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>

                <!-- Puantaj Detayları -->
                @if (Model.TimesheetDetails.Any())
                {
                    <div class="card mt-3">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5><i class="fas fa-list"></i> Günlük Detaylar</h5>
                            @if (canEditDetails)
                            {
                                <small class="text-muted">
                                    <i class="fas fa-edit"></i> Detayları düzenleyebilirsiniz
                                </small>
                            }
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-sm">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Tarih</th>
                                            <th>Gün</th>
                                            <th>Devam</th>
                                            <th>Çalışma Yeri</th>
                                            <th>İzin Bilgisi</th>
                                            <th>Eğitim Bilgisi</th>
                                            <th>Notlar</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in Model.TimesheetDetails.OrderBy(d => d.WorkDate))
                                        {
                                            <tr class="@(detail.WorkDate.DayOfWeek == DayOfWeek.Saturday || detail.WorkDate.DayOfWeek == DayOfWeek.Sunday ? "table-secondary" : "")
                                      @(!detail.IsPresent && detail.LeaveHours > 0 ? "table-warning" : "")">
                                                <td>@detail.WorkDate.ToString("dd.MM.yyyy")</td>
                                                <td>@detail.DayName</td>
                                                <td>
                                                    @if (detail.IsPresent)
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check"></i> Var
                                                        </span>
                                                        @if (detail.StartTime.HasValue && detail.EndTime.HasValue)
                                                        {
                                                            <br>
                                            
                                                            <small class="text-muted">
                                                                @detail.StartTime.Value.ToString(@"hh\:mm") - @detail.EndTime.Value.ToString(@"hh\:mm")
                                                            </small>
                                                        }
                                                    }
                                                    else if (detail.LeaveHours > 0)
                                                    {
                                                        <span class="badge bg-warning">
                                                            <i class="fas fa-calendar-times"></i> İzinli
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">
                                                            <i class="fas fa-times"></i> Yok
                                                        </span>
                                                    }
                                                </td>
                                                <td>
                                                    @switch (detail.WorkLocation)
                                                    {
                                                        case WorkLocation.HeadOffice:
                                                            <span>Genel Müdürlük</span>
                                                            break;
                                                        case WorkLocation.Branch:
                                                            <span>İşletme</span>
                                                            break;
                                                        default:
                                                            <span>@detail.WorkLocation.ToString()</span>
                                                            break;
                                                    }
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(detail.LeaveInfo))
                                                    {
                                                        <div class="alert alert-warning p-2 mb-0">
                                                            
                                                                <strong>İzin:</strong> @detail.LeaveInfo
                                                                @if (detail.LeaveHours > 0)
                                                                {
                                                                <small>
                                                                    <br>
                                                                    <strong>Süre:</strong>
 
                                                                    @detail.LeaveHours.ToString("F1")
                                                                    saat  
                                                                </small >
                                                                                                                    }
                                                            
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(detail.TrainingInfo))
                                                    {
                                                        <div>
                                                            <small>
                                                                <strong>Eğitim:</strong> @detail.TrainingInfo
                                                                <br><strong>Süre:</strong> @detail.TrainingHours.ToString("F1") saat
                                                            </small>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(detail.Notes))
                                                    {
                                                        <small>@detail.Notes</small>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Durum ve Onay Bilgileri -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-clipboard-check"></i> Onay Durumu</h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            @switch (Model.Status)
                            {
                                case ApprovalStatus.Pending:
                                    <span class="badge bg-warning fs-6 p-2">Beklemede</span>
                                    break;
                                case ApprovalStatus.Approved:
                                    <span class="badge bg-success fs-6 p-2">Onaylandı</span>
                                    break;
                                case ApprovalStatus.Rejected:
                                    <span class="badge bg-danger fs-6 p-2">Reddedildi</span>
                                    break;
                                case ApprovalStatus.Revision:
                                    <span class="badge bg-info fs-6 p-2">Revizyon Gerekiyor</span>
                                    break;
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ApproverName))
                        {
                            <div class="mb-2">
                                <label class="form-label fw-bold">Onaylayan:</label>
                                <p class="mb-0">@Model.ApproverName</p>
                            </div>
                        }

                        @if (Model.ApprovalDate.HasValue)
                        {
                            <div class="mb-2">
                                <label class="form-label fw-bold">Onay Tarihi:</label>
                                <p class="mb-0">@Model.ApprovalDate.Value.ToString("dd.MM.yyyy HH:mm")</p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.ApprovalNote))
                        {
                            <div class="mb-2">
                                <label class="form-label fw-bold">Onay Notu:</label>
                                <div class="alert alert-info p-2">
                                    <small>@Model.ApprovalNote</small>
                                </div>
                            </div>
                        }

                        <!-- ONAYLAMA BUTONLARI - SADECE YETKİLİ ROLLER GÖREBİLİR -->
                        @if (canApprove && (Model.Status == ApprovalStatus.Pending || Model.Status == ApprovalStatus.Revision))
                        {
                            <hr>
                            <div class="d-grid gap-2">
                                <!-- ONAYLA BUTONU - Form ile yapılmalı -->
                                <form method="post" asp-action="Approve" asp-controller="Timesheets" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-success w-100"
                                            onclick="return confirm('Bu puantajı onaylamak istediğinizden emin misiniz?')">
                                        <i class="fas fa-check"></i> Onayla
                                    </button>
                                </form>

                                <!-- REVİZYON VE REDDET BUTONLARI -->
                                <button type="button" class="btn btn-warning" onclick="showRevisionModal()">
                                    <i class="fas fa-edit"></i> Revizyon İste
                                </button>

                                <button type="button" class="btn btn-danger" onclick="showRejectModal()">
                                    <i class="fas fa-times"></i> Reddet
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MODAL'LAR - SADECE YETKİLİLER İÇİN -->
@if (canApprove)
{
    <!-- Reddetme Modal -->
    <div class="modal fade" id="rejectModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Puantajı Reddet</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="post" asp-action="Reject" asp-controller="Timesheets">
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="mb-3">
                            <label for="rejectNote" class="form-label">Red Sebebi *</label>
                            <textarea class="form-control" name="approvalNote" rows="3" required
                                  placeholder="Lütfen reddetme sebebinizi açıklayın..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-danger">Reddet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Revizyon Modal -->
    <div class="modal fade" id="revisionModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Revizyon İste</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="post" asp-action="RequestRevision" asp-controller="Timesheets">
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="mb-3">
                            <label for="revisionNote" class="form-label">Revizyon Notu *</label>
                            <textarea class="form-control" name="approvalNote" rows="3" required
                                  placeholder="Hangi değişikliklerin yapılması gerektiğini belirtiniz..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-warning">Revizyon İste</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function showRejectModal() {
            new bootstrap.Modal(document.getElementById('rejectModal')).show();
        }

        function showRevisionModal() {
            new bootstrap.Modal(document.getElementById('revisionModal')).show();
        }
    </script>
}