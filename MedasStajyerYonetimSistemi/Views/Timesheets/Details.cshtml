@model MedasStajyerYonetimSistemi.Models.Timesheet
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Puantaj Detayı";
    var currentUser = await UserManager.GetUserAsync(User);
    var userRoles = await UserManager.GetRolesAsync(currentUser);
    bool canApprove = userRoles.Any(r => r == "Admin" || r == "HR" || r == "Supervisor" || r == "PersonelIsleri");
    bool isIntern = userRoles.Contains("Intern");
    bool canEdit = (Model.Status == ApprovalStatus.Pending || Model.Status == ApprovalStatus.Revision) &&
                   (canApprove || (isIntern && Model.Intern.Email == currentUser.Email));
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Puantaj Detayı</h2>
            <div>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri
                </a>
                @if (canEdit)
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                }
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row">
            <!-- Ana Bilgiler -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-calendar-alt"></i> Puantaj Bilgileri</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Stajyer:</label>
                                    <p class="mb-0">@Model.Intern.FullName</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Departman:</label>
                                    <p class="mb-0">@Model.Intern.Department</p>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Dönem:</label>
                                    <p class="mb-0">@Model.PeriodDate.ToString("MMMM yyyy")</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Toplam Eğitim Saati:</label>
                                    <p class="mb-0">@Model.TotalTrainingHours.ToString("F1") saat</p>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Manuel Form:</label>
                                    <p class="mb-0">
                                        <span class="badge bg-@(Model.IsManualEntry ? "warning" : "secondary")">
                                            @(Model.IsManualEntry ? "Evet" : "Hayır")
                                        </span>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Oluşturma Tarihi:</label>
                                    <p class="mb-0">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Puantaj Detayları -->
                @if (Model.TimesheetDetails.Any())
                {
                    <div class="card mt-3">
                        <div class="card-header">
                            <h5><i class="fas fa-list"></i> Günlük Detaylar</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-sm">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Tarih</th>
                                            <th>Gün</th>
                                            <th>Devam</th>
                                            <th>Çalışma Yeri</th>
                                            <th>İzin Bilgisi</th>
                                            <th>Eğitim Bilgisi</th>
                                            <th>Notlar</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in Model.TimesheetDetails.OrderBy(d => d.WorkDate))
                                        {
                                            <tr>
                                                <td>@detail.WorkDate.ToString("dd.MM.yyyy")</td>
                                                <td>@detail.DayName</td>
                                                <td>
                                                    @if (detail.IsPresent)
                                                    {
                                                        <span class="badge bg-success">Evet</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">Hayır</span>
                                                    }
                                                </td>
                                                <td>@detail.WorkLocation</td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(detail.LeaveInfo))
                                                    {
                                                        <span>@detail.LeaveInfo</span>
                                                        @if (detail.LeaveHours > 0)
                                                        {
                                                            <br>
                                            
                                                            <small class="text-muted">(@detail.LeaveHours.ToString("F1") saat)</small>
                                                        }
                                                    }
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(detail.TrainingInfo))
                                                    {
                                                        <span>@detail.TrainingInfo</span>
                                                        @if (detail.TrainingHours > 0)
                                                        {
                                                            <br>
                                            
                                                            <small class="text-muted">(@detail.TrainingHours.ToString("F1") saat)</small>
                                                        }
                                                    }
                                                </td>
                                                <td>@detail.Notes</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Durum ve Onay Bilgileri -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-clipboard-check"></i> Onay Durumu</h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            @switch (Model.Status)
                            {
                                case ApprovalStatus.Pending:
                                    <span class="badge bg-warning fs-6 p-2">Beklemede</span>
                                    break;
                                case ApprovalStatus.Approved:
                                    <span class="badge bg-success fs-6 p-2">Onaylandı</span>
                                    break;
                                case ApprovalStatus.Rejected:
                                    <span class="badge bg-danger fs-6 p-2">Reddedildi</span>
                                    break;
                                case ApprovalStatus.Revision:
                                    <span class="badge bg-info fs-6 p-2">Revizyon Gerekiyor</span>
                                    break;
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ApproverName))
                        {
                            <div class="mb-2">
                                <label class="form-label fw-bold">Onaylayan:</label>
                                <p class="mb-0">@Model.ApproverName</p>
                            </div>
                        }

                        @if (Model.ApprovalDate.HasValue)
                        {
                            <div class="mb-2">
                                <label class="form-label fw-bold">Onay Tarihi:</label>
                                <p class="mb-0">@Model.ApprovalDate.Value.ToString("dd.MM.yyyy HH:mm")</p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.ApprovalNote))
                        {
                            <div class="mb-2">
                                <label class="form-label fw-bold">Onay Notu:</label>
                                <p class="mb-0">@Model.ApprovalNote</p>
                            </div>
                        }

                        <!-- ONAYLAMA BUTONLARI - SADECE YETKİLİ ROLLER GÖREBİLİR -->
                        @if (canApprove && (Model.Status == ApprovalStatus.Pending || Model.Status == ApprovalStatus.Revision))
                        {
                            <hr>
                            <div class="d-grid gap-2">
                                <button type="button" class="btn btn-success" onclick="approveTimesheet(@Model.Id)">
                                    <i class="fas fa-check"></i> Onayla
                                </button>
                                <button type="button" class="btn btn-warning" onclick="showRevisionModal(@Model.Id)">
                                    <i class="fas fa-edit"></i> Revizyon İste
                                </button>
                                <button type="button" class="btn btn-danger" onclick="showRejectModal(@Model.Id)">
                                    <i class="fas fa-times"></i> Reddet
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MODAL'LAR - SADECE YETKİLİLER İÇİN -->
@if (canApprove)
{
    <!-- Reddetme Modal -->
    <div class="modal fade" id="rejectModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Puantajı Reddet</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="rejectForm" method="post">
                    <div class="modal-body">
                        <input type="hidden" id="rejectTimesheetId" name="id" />
                        <div class="mb-3">
                            <label for="rejectNote" class="form-label">Red Sebebi *</label>
                            <textarea class="form-control" id="rejectNote" name="approvalNote" rows="3" required
                                  placeholder="Lütfen reddetme sebebinizi açıklayın..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-danger">Reddet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Revizyon Modal -->
    <div class="modal fade" id="revisionModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Revizyon İste</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="revisionForm" method="post">
                    <div class="modal-body">
                        <input type="hidden" id="revisionTimesheetId" name="id" />
                        <div class="mb-3">
                            <label for="revisionNote" class="form-label">Revizyon Notu *</label>
                            <textarea class="form-control" id="revisionNote" name="approvalNote" rows="3" required
                                  placeholder="Hangi değişikliklerin yapılması gerektiğini belirtiniz..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-warning">Revizyon İste</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <!-- SADECE YETKİLİLER İÇİN JAVASCRIPT FONKSİYONLARI -->
    @if (canApprove)
    {
        <script>
            function approveTimesheet(id) {
                if (confirm('Bu puantajı onaylamak istediğinizden emin misiniz?')) {
                    var form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '@Url.Action("Approve", "Timesheets")';

                    var idInput = document.createElement('input');
                    idInput.type = 'hidden';
                    idInput.name = 'id';
                    idInput.value = id;
                    form.appendChild(idInput);

                    var tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = '@Html.AntiForgeryToken().ToString().Replace("<input name=\"__RequestVerificationToken\" type=\"hidden\" value=\"", "").Replace("\" />", "")';
                    form.appendChild(tokenInput);

                    document.body.appendChild(form);
                    form.submit();
                }
            }

            function showRejectModal(id) {
                document.getElementById('rejectTimesheetId').value = id;
                document.getElementById('rejectForm').action = '@Url.Action("Reject", "Timesheets")';
                new bootstrap.Modal(document.getElementById('rejectModal')).show();
            }

            function showRevisionModal(id) {
                document.getElementById('revisionTimesheetId').value = id;
                document.getElementById('revisionForm').action = '@Url.Action("RequestRevision", "Timesheets")';
                new bootstrap.Modal(document.getElementById('revisionModal')).show();
            }
        </script>
    }
}