@model MedasStajyerYonetimSistemi.Models.Timesheet

@{
    ViewData["Title"] = "Yeni Puantaj";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3><i class="fas fa-calendar-plus"></i> Yeni Puantaj Oluştur</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="InternId" class="form-label">
                                    Stajyer <span class="text-danger">*</span>
                                </label>
                                <select asp-for="InternId" class="form-select" asp-items="ViewBag.InternId">
                                    <option value="">-- Stajyer Seçin --</option>
                                </select>
                                <span asp-validation-for="InternId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="PeriodDate" class="form-label">
                                    Puantaj Dönemi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="PeriodDate" type="month" class="form-control" />
                                <span asp-validation-for="PeriodDate" class="text-danger"></span>
                                <div class="form-text">Örnek: 2024-01 (Ocak 2024)</div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-check mb-3">
                                <input asp-for="IsManualEntry" class="form-check-input" type="checkbox" />
                                <label asp-for="IsManualEntry" class="form-check-label">
                                    Manuel Form
                                </label>
                                <div class="form-text">Manuel olarak oluşturulan puantajlar için işaretleyin</div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle"></i> Puantaj Oluşturma Bilgileri</h6>
                        <ul class="mb-0">
                            <li>Seçilen dönem için otomatik olarak günlük kayıtlar oluşturulacaktır</li>
                            <li>Hafta içi günler için varsayılan çalışma saatleri (08:30-17:30) ayarlanacaktır</li>
                            <li>Hafta sonu günleri için devamsızlık işaretlenecektir</li>
                            <li>Puantaj oluşturulduktan sonra günlük detayları düzenleyebilirsiniz</li>
                            <li>Onaylanan izin talepleri otomatik olarak puantaja yansıtılacaktır</li>
                        </ul>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Geri
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Puantaj Oluştur
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Varsayılan olarak geçerli ayı seç
            const periodInput = document.querySelector('input[type="month"]');
            if (!periodInput.value) {
                const now = new Date();
                const currentMonth = now.getFullYear() + '-' + String(now.getMonth() + 1).padStart(2, '0');
                periodInput.value = currentMonth;
            }
        });
    </script>
}